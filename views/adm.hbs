</header>
<div class="px-7 px-lg-0">
    <div class="pb-5">
        <div class="container-fluid" style="width: 90%;">
            <div class="row">
                <div class="col-3 p-1 bg-white rounded shadow-sm mb-1">
                    <form action="/adm/add" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label>Nombre</label>
                            <input name="name" type="text" class="form-control" placeholder="Ingrese nombre">
                        </div>
                        <div class="form-group">
                            <label>Descripcion</label>
                            <textarea name="description" class="form-control" rows="3"></textarea>
                        </div>
                        <div class="form-group">
                            <label>Precio</label>
                            <input type="text" name="price" class="form-control" placeholder="Ingrese precio">
                        </div>
                        <div class="form-group input-group mb-3">
                            <input type="file" name="path" class="custom-file-input">
                            <label class="custom-file-label">Subir imagen</label>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Agregar</button>
                    </form>
                </div>
                <div class="col-sm-auto"></div>
                <div class="col p-1 bg-white rounded shadow-sm mb-1">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Imagen</th>
                                <th scope="col">Nombre</th>
                                <th scope="col">Descripcion</th>
                                <th scope="col">Precio</th>
                                <th scope="col">Opciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each data}}
                            <tr>
                                <td><img class="img-thumbnail" src="{{this.path}}" alt="Sheep" width="200" height="200"></td>
                                <td>{{this.name}}</td>
                                <td>{{this.description}}</td>
                                <td class="text-center">{{this.price}}.00</td>
                                <td class="text-center">
                                    {{!-- <a class="btn btn-primary" href="/adm/edit/{{this._id}}">Actualizar</a> --}}
                                    <a href="/adm/delete/{{this._id}}"><i class="fas fa-trash fa-lg" style="color:crimson"></i></a>
                                </td>
                            </tr>
                            {{else}}
                            <tr>
                                <td>No hay informacion en la tabla</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>