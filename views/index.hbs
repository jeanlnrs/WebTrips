<br><br><br>
<div class="container marketing">
    <br>
    <h2>Panama</h2>
    <hr>
    <div class="row">
        {{#each data}}
        <div class="col-md-4">
            <!-- Card Wider -->
            <div class="card mb-4 shadow-sm">

                <!-- Card image -->
                <div class="view overlay">
                    <img class="card-img-top" style="height:16rem;" src="{{this.path}}" alt="Card image cap">
                </div>
                <!-- Card content -->
                <div class="card-body">

                    <!-- Title -->
                    <h5 class="card-title">{{this.name}}</h5>
                    <hr>

                    <!-- Text -->
                    <p class="card-text">{{this.description}}</p>
                    <div class="d-flex justify-content-between align-items-center">

                        <!-- Link -->
                        <button type="button"
                            onclick="cart2('{{this.name}}','{{this.description}}','{{this.price}}','{{this.path}}')"
                            class="btn btn-flat btn-lg"><a class="black-text d-flex justify-content-end"
                                href="/cart"><b>${{this.price}}</b></a></button>
                        <button id="{{this.name}}" type="button"
                            onclick="cart('{{this.name}}','{{this.description}}','{{this.price}}','{{this.path}}')"
                            class="btn btn-flat btn-lg justify-content-end"><i
                                class="fas fa-shopping-cart pl-1"></i></button>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
<script src="/js/main.js"></script>