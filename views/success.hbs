<section id="team" class="pb-5">
    <div class="container">
        <h5 class="section-title h1">Mis destinos</h5>
        <div class="row">
            {{#each order}}
            <div class="col-12 col-sm-6 col-md-4">
                <div class="card text-center" data-background="image" data-src="{{this.path}}">
                    <h4 class="title title-modern">{{this.name}}</h4>

                    <div class="content">
                        <br><br><br><br><br>
                        <br><br><br><br><br>
                    </div>

                    <div class="footer btn-center">
                        <button id="modalActivate" type="button" data-toggle="modal" data-target="#modal{{this.id}}"
                            class="btn btn-neutral btn-round btn-modern">Descargar</button>
                    </div>

                    <div class="filter filter-blue"></div>
                </div> <!-- end card -->
                <!-- Modal -->
                <div class="modal fade right" id="modal{{this.id}}" tabindex="-1" role="dialog"
                    aria-labelledby="exampleModalPreviewLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalPreviewLabel">Escanear boleto</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <div class="card text-center">
                                    <img class=" img-fluid" src="/img/qr-imagen.png" alt="card image">
                                    <p class="text-center"> {{this.id}}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Modal -->
            </div>
            {{else}}
            <div class="col-12 text-center">
                <div class="d-flex h-100 text-center align-items-center"><br><br>
                    <div class="w-100">
                        <p>Aún no se han registrado compras... <a href="/search">buscar un destino aquí</a></p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>
<script src="/js/hipster-cards.js"></script>